{
  "*": { "make": "mocha" },
  "commands/*.js": {
    "type": "command",
    "alternate": "spec/commands/{}_spec.js"
  },
  "lib/*.js": {
    "type": "lib",
    "alternate": "spec/lib/{}_spec.js",
    "template": [
      "'use strict'",
      "",
      "module.epxorts = '...'"
    ]
  },
  "spec/*.js": {
    "type": "spec",
    "alternate": "{}.js",
    "template": [
      "let assert = require('assert')",
      "",
      "describe('{}', function() {",
      "})",
      ""
    ]
  }
}
